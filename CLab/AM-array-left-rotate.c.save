#include"stdio.h"
void main()
{
	int arr[10],i,n,num;
	printf("enter the size of an array:-");
	scanf("%d",&n);
	printf("enter the element in an array:-");
	for(i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	printf("enter no of times of left rotate:");
	scanf("%d",&num);
	num=num%n;
	printf("Array before rotation:");
	printArray(arr);
	for(i=0i<num;i++)
	{
		rotateByone(arr);
	}
	printf("\n After totation \n");
	printArray(arr);
}
void rotateByone(int arr[])
{
	int i,first;
	first=arr[0];
	for(i=0;i<size-1;i++)
	{
		arr[i]=arr[i+1];
	}
	arr[size-1]=first
}
void PrintArray(int arr[])
{
	int i;
	for(i=0;i<size;i++)
	{
		printf("%d, ",arr[i]);
	}
}
